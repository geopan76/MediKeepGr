# Database Configuration
DB_NAME=medical_records
DB_USER=medapp
# IMPORTANT: Password special character handling
# - Problematic characters:
#   - $ triggers variable expansion (always escape as $$, e.g., pass$$word -> pass$word)
#   - # starts a comment if unquoted (wrap in quotes: DB_PASSWORD="my#pass")
# - Safe special characters (no escaping needed): @ % ^ & * ( ) - _ . !
# - Example with special chars: DB_PASSWORD="P@ss#w0rd$$5%^&*()"
# - Example simple password: MySecure-Pass_2024.db
DB_PASSWORD=your-secure-password-here # replace this with the database password of your choice

# App Configuration
APP_PORT=8005
SECRET_KEY=your-secret-key-here
LOG_LEVEL=INFO
TZ=Europe/Athens

# SSL Configuration
ENABLE_SSL=false

# Default Admin Password Configuration
# Set custom password for the default admin user (defaults to admin123 if not set)
## ADMIN_DEFAULT_PASSWORD=your-custom-admin-password

# GitHub SSO Configuration
# SSO_ENABLED=true
# SSO_PROVIDER_TYPE=github
# SSO_CLIENT_ID=your-github-client-id
# SSO_CLIENT_SECRET=your-github-client-secret
# SSO_REDIRECT_URI=http://localhost:8005/api/v1/sso/callback
